{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "BACKEND_HOST": "0.0.0.0",
        "BACKEND_PORT": "$PORT",
        "LOG_LEVEL": "INFO"
      }
    },
    "staging": {
      "variables": {
        "ENVIRONMENT": "staging",
        "DEBUG": "true",
        "BACKEND_HOST": "0.0.0.0", 
        "BACKEND_PORT": "$PORT",
        "LOG_LEVEL": "DEBUG"
      }
    }
  },
  "services": [
    {
      "name": "backend",
      "source": {
        "type": "dockerfile",
        "path": "backend/Dockerfile"
      },
      "variables": {
        "PYTHONPATH": "/app",
        "CHROMA_PERSIST_DIRECTORY": "/app/data/chroma_db"
      },
      "healthcheck": {
        "command": ["curl", "-f", "http://localhost:$PORT/health"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 30
      }
    },
    {
      "name": "frontend",
      "source": {
        "type": "dockerfile", 
        "path": "frontend/Dockerfile"
      },
      "variables": {
        "VITE_API_URL": "${{backend.url}}"
      }
    }
  ],
  "volumes": [
    {
      "name": "chroma-data",
      "mountPath": "/app/data"
    }
  ]
} 